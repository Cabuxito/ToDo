@page
@model ToDo.Pages.CompletedTask.CompletedTaskModel
@{
}

<table class="table table-hover">

    <thead>
        <tr>
            <th scope="col">Task Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Created time</th>
            <th scope="col">Status</th>
            <th scope="col">Priority</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    @foreach (var item in Model.TaskList)
    {
        @if (item.Task_Status != false)
        {
            <tbody>
                <tr>
                    <th scope="row">@item.Task_Id</th>
                    <td>@item.Task_Name</td>
                    <td>@item.Task_Description</td>
                    <td>@item.Task_Created</td>
                    <td>@item.Task_Status</td>
                    <td>@item.Priority</td>
                    <td><a class="btn btn-dark btn-group-sm" asp-route-TaskId="@item.Task_Id" asp-page="/CRUD/Update">Edit</a></td>
                    <td>
                        <form asp-page-handler="DeleteButton" asp-route-TaskId="@item.Task_Id" method="post">
                            <button type="submit" class="btn btn-warning btn-group-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            </tbody>
        }
        else
        {
            @RedirectToPage("/Error");
        }
    }
</table>