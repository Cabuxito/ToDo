@page
@model ToDo.Pages.UserPageModel
@{
}

<div class="UserForms align-content-center">
    <form method="post">
        <h2>WELCOME TO PRIVATE</h2><br />
        <select asp-for="UserChoice">
            <option>My Tasks</option>
            <option>My Profile</option>
        </select><br /><br />
        <input class="btn btn-dark" type="submit" value="Search" />
    </form>
</div>

    @if (Model.UserCheck){
        <table class="table table-hover">
            <thead>
                <tr style="text-align: center;">
                    <th scope="col">ID</th>
                    <th scope="col">Username</th>
                    <th scope="col">Firstname</th>
                    <th scope="col">LastName</th>
                    <th scope="col">Email</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr style="text-align:center;">
                    <td>@Model.User.User_Id</td>
                    <td>@Model.User.UserName</td>
                    <td>@Model.User.FirstName</td>
                    <td>@Model.User.LastName</td>
                    <td>@Model.User.Email</td>
                    <td><a class="btn btn-dark btn-group-sm" asp-route-TaskId="@Model.User.User_Id" asp-page="/CRUD/Update">Edit</a></td>
                    <td>
                        <form asp-page-handler="DeleteButton" asp-route-TaskId="@Model.User.User_Id" method="post">
                            <button type="submit" class="btn btn-dark btn-group-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    }
    @if(Model.TasksCheck)
    {
        <table class="table table-hover">
            <thead>
                <tr style="text-align: center;">
                    <th scope="col">Priority</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Created time</th>
                    <th scope="col">Status</th>
                    <th scope="col">Complete</th>
                    <th scope="col">Save</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            @foreach (var item in Model.Tasks)
            {
                <tbody>
                    <tr style="text-align:center;">
                        @if (item.Priority == "High")
                        {
                            <td style="background-color: red">@item.Priority</td>
                        }
                        @if (item.Priority == "Medium")
                        {
                            <td style="background-color: yellow">@item.Priority</td>
                        }
                        @if (item.Priority == "Low")
                        {
                            <td style="background-color: green">@item.Priority</td>
                        }
                        <td>@item.Task_Name</td>
                        <td>@item.Task_Description</td>
                        <td>@item.Task_Created</td>
                        <td>In Process</td>
                        <form method="post" asp-page-handler="save" asp-route-TaskId="@item.Task_Id">
                        <td>
                            <input type="checkbox" asp-for="CompletedCheck">
                        </td>
                        <td>
                            <button class="btn btn-dark">Save</button>
                        </td>
                        </form>
                        <td><a class="btn btn-dark btn-group-sm" asp-route-TaskId="@item.Task_Id" asp-page="/CRUD/Update">Edit</a></td>
                        <td>
                            <form asp-page-handler="DeleteButton" asp-route-TaskId="@item.Task_Id" method="post">
                                <button type="submit" class="btn btn-dark btn-group-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    }