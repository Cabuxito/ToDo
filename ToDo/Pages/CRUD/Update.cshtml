@page "{TaskId:int}"
@model ToDo.Pages.CRUD.UpdateModel
@{
}
<h4 class="d-flex justify-content-center">UPDATE TASK</h4>
<div class="d-flex justify-content-center">
    <form action="" method="post" class="col-4">
        <div class="mb-3 ">
            <label class="form-label" for="TaskName">Task Name:</label>
            <input type="text" id="TaskName" class="form-control" asp-for="NewTaskName" value="@Model.myTask.Task_Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Description:</label>
            <textarea class="form-control" asp-for="NewTaskDescription" value="@Model.myTask.Task_Description"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Priority:</label>
            <input type="text" class="form-control" asp-for="NewPriority" value="@Model.myTask.Priority" />
        </div>
        <div class="mb-3">
            <label class="form-label">Status:</label>
            <input type="text" class="form-control" asp-for="NewStatus" value="@Model.myTask.Task_Status" />
        </div>
        <div class="d-flex justify-content-center ">
            <button type="submit" class="btn btn-dark m-1">Update</button>
            <a class="btn btn-dark m-1 " asp-page="/CRUD/Update">Cancel</a>
        </div>
    </form>
</div>